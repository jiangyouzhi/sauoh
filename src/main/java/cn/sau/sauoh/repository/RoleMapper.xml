<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sau.sauoh.repository.RoleMapper">
    <resultMap id="BaseResultMap" type="cn.sau.sauoh.entity.Role">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="CHAR" property="name"/>
    </resultMap>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete
        from role
        where id = #{id,jdbcType=INTEGER}
    </delete>
    <insert id="insert" parameterType="cn.sau.sauoh.entity.Role">
        insert into role (id, name)
        values (#{id,jdbcType=INTEGER}, #{name,jdbcType=CHAR})
    </insert>
    <update id="updateByPrimaryKey" parameterType="cn.sau.sauoh.entity.Role">
        update role
        set name = #{name,jdbcType=CHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select id, name
        from role
        where id = #{id,jdbcType=INTEGER}
    </select>
    <select id="selectAll" resultMap="BaseResultMap">
        select id, name
        from role
    </select>
    <select id="selectAllByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT role.id id, role.name name
        FROM user
                 INNER JOIN user_role
                 INNER JOIN role
        WHERE user.id = user_role.user_id
          AND user_role.role_id = role.id
          AND user.id = #{userId,jdbcType=INTEGER}
    </select>
</mapper>